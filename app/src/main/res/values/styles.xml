<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#FFBB00</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MusicInfo">
        <item name="android:textColor">#fff</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-5</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="ListText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LoginForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LoginLoginButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#3CB371</item>
    </style>

    <style name="LoginGuestButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#6799FF</item>
    </style>

    <style name="LoginRegisterButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#F29661</item>
    </style>

    <style name="SearchMusicButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#FFCA6C</item>
    </style>

    <style name="SearchUtaiteButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#F15F5F</item>
    </style>

</resources>
